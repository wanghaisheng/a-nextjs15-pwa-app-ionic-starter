# 数据库环境配置
# 可选值: mock, local, cloud
NEXT_PUBLIC_DATABASE_ENV=mock

# 本地数据库类型配置
# 可选值: indexeddb, sqlite
NEXT_PUBLIC_LOCAL_DB_TYPE=indexeddb

# 云端数据库类型配置
# 可选值: supabase, mysql, cloudflare_d1
NEXT_PUBLIC_CLOUD_DB_TYPE=supabase

# Mock数据库类型配置
# 可选值: json, memory
NEXT_PUBLIC_MOCK_DB_TYPE=memory

# 数据库连接配置
# Supabase配置
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# MySQL配置
NEXT_PUBLIC_MYSQL_HOST=localhost
NEXT_PUBLIC_MYSQL_PORT=3306
NEXT_PUBLIC_MYSQL_USER=root
NEXT_PUBLIC_MYSQL_PASSWORD=password
NEXT_PUBLIC_MYSQL_DATABASE=app_database

# Cloudflare D1配置
NEXT_PUBLIC_CLOUDFLARE_D1_DATABASE_ID=your_database_id
NEXT_PUBLIC_CLOUDFLARE_API_TOKEN=your_api_token

components=ionic/tailwind/others